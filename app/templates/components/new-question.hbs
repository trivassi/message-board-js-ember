{{#if addNewQuestion}}
<h2>New Question</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="content">What is your question?</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">By who?</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Any additional notes?</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
